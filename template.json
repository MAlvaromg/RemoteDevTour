{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerInstanceLocation": {
      "type": "string",
      "defaultValue": "[parameters('location')]",
      "allowedValues": [
        "westus",
        "eastus",
        "westeurope",
        "southeastaisa",
        "westus2"
      ],
      "metadata": {
        "description": "Container Instance Location"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "imageUrl": {
        "type": "string",
        "metadata": {
          "description": "The full name of the image"
        }
      },
    "acrServer": {
        "type": "string",
        "metadata": {
        "description": "The name of the Azure Container Registry server (xxxxxx.azurecr.io)"
        }
    },
    "acrUsername": {
        "type": "string",
        "metadata": {
            "description": "The user name"
        }
    },
    "acrPassword": {
        "type": "string",
        "metadata": {
            "description": "The password"
        }
    },
    "containerInstanceName": {
        "type": "string",
        "metadata": {
            "description": "The name of the container instance"
        }
    },
    "siteName": {
        "type": "string",
        "metadata": {
            "description": "The name of the site"
        }
    }
  },
  "variables": {
    "cpuCores": "1.0",
    "memoryInGb": "1.5",
    "port": 80
  },
  "resources": [
    {
      "name": "[parameters('containerInstanceName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-10-01",
      "location": "[parameters('containerInstanceLocation')]",
      "properties": {
        "containers": [
          {
            "name": "[parameters('containerInstanceName')]",
            "properties": {
              "image": "[parameters('imageUrl')]",
              "ports": [
                {
                  "protocol": "Tcp",
                  "port": 80
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "[variables('cpuCores')]",
                  "memoryInGb": "[variables('memoryInGb')]"
                }
              }
            }
          }
        ],
        "imageRegistryCredentials": [
            {
              "server": "[parameters('acrServer')]",
              "username": "[parameters('acrUsername')]",
              "password": "[parameters('acrPassword')]"
            }
        ],
        "ipAddress": {
          "ports": [
            {
              "protocol": "Tcp",
              "port": 80
            }
          ],
          "type": "Public",
          "dnsNameLabel": "[parameters('siteName')]"
        },
        "restartPolicy": "OnFailure",
        "osType": "Linux"
      }
    }
  ]
}